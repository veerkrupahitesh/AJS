                    <!--android:id="@+id/tv_search"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:onClick="onClick"-->
                    <!--android:padding="10dp"-->
                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:layout_marginStart="5dp"-->
                    <!--android:text="@string/str_search"-->
                    <!--android:textColor="@android:color/black"-->
                    <!--android:textSize="18sp" />-->

            <!--</LinearLayout>-->

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingStart="20dp">

                <ImageView
                    android:id="@+id/img_change_psw"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/img_change_password"/>
                <TextView
                    android:id="@+id/tv_changePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/img_arrow_right"
                    android:drawableRight="@drawable/img_arrow_right"
                    android:onClick="onClick"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:padding="10dp"
                    android:text="Change Password"
                    android:textColor="#30472F"
                    android:textSize="15sp"/>

            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#30472F" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/img_logOut"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/logout" />

            <TextView
                android:id="@+id/tv_signOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="@string/str_signout"
                android:textColor="#30472F"
                android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#30472F" />
        </LinearLayout>

    </ScrollView>
        </LinearLayout>
</LinearLayout>